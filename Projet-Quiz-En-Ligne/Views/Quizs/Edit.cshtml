@model Projet_Quiz_En_Ligne.ViewModel.QuizCategoryViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Quizs", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Quiz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Quiz.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Quiz.Sujet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quiz.Sujet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quiz.Sujet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quiz.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Quiz.Category, new SelectList(Model.Categories, "Name", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quiz.Category, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <img src="~/Content/images/@Session["Image"]" class="img-responsive" alt="Alternate Text" style="height: 150px" />
                <label for="files" class="btn btn-info">Modifier L'image'</label>
                <input type="file" name="image" id="files" value="" style="visibility:hidden;" />
                @Html.ValidationMessageFor(model => model.Quiz.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="user-data__footer">
    <button class="au-btn au-btn-load">@Html.ActionLink("Retour", "Index")</button>
</div>
