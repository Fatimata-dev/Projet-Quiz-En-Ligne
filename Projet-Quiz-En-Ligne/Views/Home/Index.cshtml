<body class="is-preload">

    <!-- Sidebar -->
    <section id="sidebar">
        <div class="inner">
            <nav>
                <ul class="navbar-header" style="float:right !important">
                    @Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                    @if (Session["User"] != null)
                    {
                        UserResultViewModel us = new UserResultViewModel();
                        us = (UserResultViewModel)Session["User"];
                        <li><p margin-top:15px;">Hello @us.Name</p></li>
                        @Html.ActionLink("Deconnexion", "Logout", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        @*@Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })*@
                        if(us.IsAdmin)
                        {
                            @Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    }
                    else
                    {
                        @Html.ActionLink("Connexion", "Login", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Inscription", "Signup", "Admin", new { area = "" }, new { @class = "navbar-brand" })

                    }

                    @Html.ActionLink("Contact", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Commencer un quiz", "Quiz", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </ul>
            </nav>
        </div>
    </section>

    <!-- Wrapper -->
